#!/bin/sh
# postinst script for otherlife-data
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
	configure)
	
	TARGETDIR="/usr/share/games/OtherLife"
	CACHEDIR="/var/cache/otherlife"
	DOWNLOADURL="https://twinmoons.org.uk/ol/rel/193"
	DOWNLOADMAIN="ol_linux_data.zip"
	MD5SUMMAIN="b39c7de45ecfe02afa23963ccfcd13af"
	# post release updates
	#DOWNLOADUPDATE2="x.zip"
	#MD5SUMUPDATE2=""

	[ -f ~paul/ol/installpkg/localdownload ] && DOWNLOADURL="https://harry/~paul/ol"

	mkdir -p $CACHEDIR
	cd $CACHEDIR
	
	# remove old downloads
	#rm -f xxx.zip

	# if we already have an archive check the md5sum is ok and remove if not
	[ ! -f "$DOWNLOADMAIN" ] || echo "$MD5SUMMAIN  $DOWNLOADMAIN" | md5sum -c - || rm -fv $DOWNLOADMAIN
	# post release updates
	#[ ! -f "$DOWNLOADUPDATE2" ] || echo "$MD5SUMUPDATE2  $DOWNLOADUPDATE2" | md5sum -c - || rm -fv $DOWNLOADUPDATE2
	
	# Use existing file or download it 
	if [ ! -f "$DOWNLOADMAIN" ]
	then
		wget -P "." -v --progress="dot:mega" --no-check-certificate $DOWNLOADURL/$DOWNLOADMAIN
		echo "$MD5SUMMAIN  $DOWNLOADMAIN" | md5sum -c -
	fi
	# post release updates
	#if [ ! -f "$DOWNLOADUPDATE2" ]
	#then
	#	wget -P "." -v --progress="dot:mega" --no-check-certificate $DOWNLOADURL/$DOWNLOADUPDATE2
	#	echo "$MD5SUMUPDATE2  $DOWNLOADUPDATE2" | md5sum -c -
	#fi

	# unnpack the archive
	UNPACKDIR="`mktemp -d /tmp/otherlife-data.XXXXXXXXXX`"
	cd $UNPACKDIR
	unzip -q $CACHEDIR/$DOWNLOADMAIN
	mv ol_linux ol_install
	# post release updates
	#cd ol_install
	#unzip -q -o $CACHEDIR/$DOWNLOADUPDATE2

	# fix ol.ini and server.lst, remove unneeded files and set the permissions
	cd $UNPACKDIR/ol_install
	rm -f *.dll *.exe ol.*.bin
	grep -v ^official servers.lst > sl
	mv sl servers.lst
	chown -R root:root .
	chmod -R a=rX .
	
	# make the file lists
	FILELIST="otherlife-data.filelist"
	DIRLIST="otherlife-data.dirlist"
	find . -type f -exec echo \"{}\" \; > $TARGETDIR/$FILELIST
	find . -type d ! -name "." -exec echo \"{}\" \; | sort -r > $TARGETDIR/$DIRLIST

	# remove any existing files in the lists then move the new files into the target directory
	cd $TARGETDIR/
	[ ! -s $FILELIST ] || cat $FILELIST | xargs rm -f || true
	[ ! -s $DIRLIST ] || cat $DIRLIST | xargs rmdir --ignore-fail-on-non-empty > /dev/null 2>&1 || true
	chmod -R +w .
	cp --remove-destination -rpf $UNPACKDIR/ol_install/* .
	
	rm -rf $UNPACKDIR
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
